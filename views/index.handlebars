<h1>Devour that Burger!</h1>

<div class="container">

  <div class="row">
    
    <div class="col s3">
      <img src='assets/img/burger.png' />
    </div>

    <div class="col s1">
    </div>

    <div class="col s4">

      <h3 class="center-align">Add a Burger</h3>
      
      <form class="create-form">

        <div class="form-group">
          <label for="bu"></label>
          <input type="text" id="bu" name="name">
        </div>
        
        <button type="submit" class="center-align">Add Burger</button>

      </form>

    </div>

    <div class="col s1">
    </div>

    <div class="col s3">
      <img src='assets/img/burger.png' />
    </div>

  </div>

  <div class="row" id="lists">

    <div class="col s6">
      <h3>Ready to devour!</h3>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col s6">
      <h3>Already devoured!</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row" id="burger_row">
    <div class="col s3">
      <img src='assets/img/burger.png' />
    </div>
    <div class="col s3">
      <img src='assets/img/burger.png' />
    </div>
    <div class="col s3">
      <img src='assets/img/burger.png' />
    </div>
    <div class="col s3">
      <img src='assets/img/burger.png' />
    </div>
  </div>

</div>

<footer class="page-footer grey darken-3">
  <div class="footer-copyright">
    <div class="container">
      Made by Eric Nkurunziza 2019
      <a class="grey-text text-lighten-4 right" href="https://github.com/zizaeric/Burger">Github repo</a>
    </div>
  </div>
</footer>